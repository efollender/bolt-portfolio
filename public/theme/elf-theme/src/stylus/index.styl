@import 'nib';
@import 'rupture';
@import '_variables';
@import '_typography';
@import 'components';
@import 'elements';

html
body
  width 100%
  height 100%
  position relative
  margin 0
  padding 0
  
body 
  background white
  color black
  display flex
  flex-direction column
  min-height 100vh
.header-wrapper
  width 100%
  display block
.main-content
  flex 1 0 100%
.main-wrapper
  display flex
  width 100%
  height 100vh
  overflow hidden
.column
  flex 1 1 50%
  position relative
  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  &.right
    overflow hidden
    z-index 0
  &.left
    z-index 1
    